#:kivy 1.7.0
#:import Exercise models.Exercise

<HomeScreen>:
    workout_btn: workout
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Do More Reps!"
            font_size: 70
            text_size: 250, None
            size_hint: 1, .8

        Button:
            id: workout
            text: "Start Workout"
            size_hint: 1, .1

        BoxLayout:
            size_hint: 1, .1
            Button:
                text: "Work out"
            Button:
                text: "Exercises"
                on_release:  root.manager.current = 'exercises'
            Button:
                text: "Settings"

<ExercisesScreen>:
    layout: layout
    add_exercise: new_exercise
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'

                Button:
                    text: "Back"
                    on_release: root.manager.current = 'home'
                    size_hint: .5, 1


            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'

                Button:
                    id: new_exercise
                    text: "+"
                    size_hint: .5, 1

        ScrollView:
            size_hint: 1, .9
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: root.scroll_height
                id: layout

<EditExerciseScreen>:
    layout: layout
    exercise: Exercise('', False)
    name_input: name_input
    weightless_button: weightlessbutton
    weights_button: weightsbutton
    BoxLayout:
        id: layout
        orientation: 'vertical'

        BoxLayout:
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'

                Button:
                    text: "Exercises"
                    on_release: root.manager.current = 'exercises'
                    size_hint: .5, .2

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'

                Button:
                    text: "Save"
                    on_release: root.save()
                    size_hint: .5, .2

        TextInput:
            id: name_input
            text: root.exercise.name
            on_text: root.exercise.name = self.text
            multiline: False
            size_hint: 1, .2

        BoxLayout:
            ToggleButton:
                id: weightsbutton
                text: "Weight + Reps"
                group: 'weightless'
                on_release: root.exercise.weightless = False
                size_hint: 1, .2
            ToggleButton:
                id: weightlessbutton
                text: "Reps only"
                group: 'weightless'
                on_release: root.exercise.weightless = True
                size_hint: 1, .2
